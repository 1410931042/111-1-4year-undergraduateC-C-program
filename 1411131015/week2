#include <stdio.h>

// function main begins program execution
int main( void )
{
   printf( "Enter three number, and I will tell you\n" );
   printf( "the largest,smallest,sum,average,product: " );

   int a,b,c,largest,smallest;

   scanf( "%d" "%d" "%d", &a,&b,&c); 
                        
   if ( a >= b ) { //a>b
    if(a >= c) {//a>b,a>c
    largest=a;  }  
    else {  //a>b,a<c c is largest
     largest=c;}
   }                                  
   else {  //a<b
     if(a >= c) {//a<b,a>c b is largest
     largest=b; }
     else{ //a<b,a<c
     smallest=a;
	 }
   if(b <= c) { //b<c
    if(b<=a) { //b<c,b<a
    smallest=b; }
    else { //b<c, b>a a is smallest
    smallest=a;
	}
   }
     
     
     
     
     
           } // end if
        } // end if
